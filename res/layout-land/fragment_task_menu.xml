<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?android:attr/buttonBarStyle"
    android:orientation="horizontal">

    <!--fitXY makes the image scale to the buttons size-->
    <Button
        android:id="@+id/games_fragment_inspection_task_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/inspectiontask2"
        android:clickable="true"
        android:contentDescription="@string/inspection_task"
        android:fontFamily="sans-serif-condensed"
        android:scaleType="fitXY"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/inspection_task"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/games_fragment_sequence_task_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/task_menu_sequence_task_image"
        android:clickable="true"
        style="?android:attr/buttonBarButtonStyle"
        android:contentDescription="@string/sequence_task"
        android:fontFamily="sans-serif-condensed"
        android:scaleType="fitXY"
        android:text="@string/sequence_task"
        android:textSize="40sp"
        android:textStyle="bold" />

</LinearLayout>